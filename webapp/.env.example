# ============================================
# Solarpunk Almanac - Environment Configuration
# ============================================

# --------------------------------------------
# Database (PostgreSQL via Enclii/Ubicloud)
# --------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/solarpunk_almanac?schema=public"

# --------------------------------------------
# Janua Authentication (madfam-io/janua)
# https://github.com/madfam-io/janua
# --------------------------------------------
# Janua API endpoint (self-hosted)
JANUA_API_URL="http://localhost:8001"
# Server-side API secret for token validation
JANUA_API_SECRET="your-janua-api-secret"

# Public variables (accessible in browser)
PUBLIC_JANUA_API_URL="http://localhost:8001"
PUBLIC_JANUA_APP_ID="solarpunk-almanac"

# --------------------------------------------
# Redis (Caching & Sessions)
# --------------------------------------------
REDIS_URL="redis://localhost:6379"

# --------------------------------------------
# Email (Resend via Janua)
# https://resend.com
# --------------------------------------------
RESEND_API_KEY="re_xxxxxxxxxxxx"
RESEND_FROM_EMAIL="hello@almanac.solar"

# --------------------------------------------
# Object Storage (Cloudflare R2 via Enclii)
# --------------------------------------------
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="solarpunk-almanac-assets"

# --------------------------------------------
# Public Variables
# --------------------------------------------
PUBLIC_SITE_URL="http://localhost:5173"
PUBLIC_SITE_NAME="The Solarpunk Almanac"

# --------------------------------------------
# App Configuration
# --------------------------------------------
NODE_ENV="development"
LOG_LEVEL="debug"
APP_URL="http://localhost:5173"

# --------------------------------------------
# OAuth Providers (configured in Janua)
# These are managed by Janua, not directly by the app
# --------------------------------------------
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# --------------------------------------------
# Analytics & Monitoring (optional)
# --------------------------------------------
# POSTHOG_API_KEY=""
# SENTRY_DSN=""
